<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.sign.SignUpActivity">

  <data>

    <variable
      name="cityAdapter"
      type="com.idiot.feature.login.ui.sign.CityAdapter" />

    <variable
      name="vm"
      type="com.idiot.feature.login.ui.sign.SignUpViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/close_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/app_horizontal_padding"
      android:layout_marginTop="30dp"
      android:drawableStart="@drawable/ic_btn_gnb_x"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/sign_up_help_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/default_item_top_margin"
      android:includeFontPadding="false"
      android:text="@string/sign_up_help_text"
      android:textAppearance="@style/TextAppearance.Signup.Regular"
      app:layout_constraintStart_toStartOf="@id/close_button"
      app:layout_constraintTop_toBottomOf="@id/close_button" />

    <TextView
      android:id="@+id/trans_type_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/app_horizontal_padding"
      android:layout_marginTop="28dp"
      android:includeFontPadding="false"
      android:text="선호 거래 유형"
      android:textAppearance="@style/TextAppearance.Signup.Regular"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/sign_up_help_text_view" />

    <LinearLayout
      android:id="@+id/trans_type_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/app_horizontal_padding"
      android:layout_marginTop="7dp"
      android:orientation="horizontal"
      android:paddingTop="5dp"
      app:layout_constraintTop_toBottomOf="@id/trans_type_title">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trading_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_info_button_background"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="매매" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lease_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_info_button_background"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="전세" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/monthly_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_info_button_background"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="월세" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/estate_type_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/app_horizontal_padding"
      android:layout_marginTop="3dp"
      android:orientation="horizontal"
      android:paddingTop="5dp"
      app:layout_constraintTop_toBottomOf="@id/trans_type_buttons">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apartment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_info_button_background"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="아파트" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/officetel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/user_info_button_background"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="오피스텔" />
    </LinearLayout>

    <TextView
      android:id="@+id/region_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/app_horizontal_padding"
      android:layout_marginTop="36dp"
      android:includeFontPadding="false"
      android:text="선호 지역"
      android:textAppearance="@style/TextAppearance.Signup.Regular"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/estate_type_buttons" />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginHorizontal="@dimen/app_horizontal_padding"
      android:layout_marginBottom="35dp"
      app:layout_constraintBottom_toTopOf="@id/complete_button"
      app:layout_constraintTop_toBottomOf="@id/region_title">

      <View
        android:id="@+id/region_top_decor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_500"
        app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/region_top_decor">

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/cities_recyclerview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2.5"
          android:clipToPadding="false"
          android:fadeScrollbars="true"
          adapter="@{cityAdapter}"
          submitList="@{vm.cityList}"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          tools:listitem="@layout/list_item_cities"/>

        <View
          android:id="@+id/region_Decor"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/gray_500" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/ditincts_recyclerview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:clipToPadding="false"
          android:fadeScrollbars="true"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

      </LinearLayout>

      <View
        android:id="@+id/region_bottom_decor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/complete_button"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginHorizontal="@dimen/app_horizontal_padding"
      android:layout_marginBottom="32dp"
      android:background="@drawable/sign_up_complete_button_background"
      android:gravity="center"
      android:text="완료"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>