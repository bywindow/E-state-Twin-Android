<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                                
                                                       
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_register_option_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
                                          
        android:layout_marginHorizontal="2.5dp"
        android:layout_marginBottom="20dp" android:tag="layout/list_item_register_option_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/register_option_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_option_button_inactive_rounded"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/register_option_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="에어컨"
            android:textAppearance="@style/TextAppearance.idiot.icon.Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_option_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         