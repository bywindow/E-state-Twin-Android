<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.EditChecklistFragment">

  <data>

    <variable
      name="vm"
      type="com.idiot.more.ui.EditChecklistViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
      android:id="@+id/toolbar_edit_checklist"
      layout="@layout/toolbar_layout"
      app:title="@{`변경사항 추가`}" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/close_button"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="@dimen/app_horizontal_padding"
      android:background="@drawable/ic_btn_gnb_x"
      android:elevation="5dp"
      app:layout_constraintBottom_toBottomOf="@id/toolbar_edit_checklist"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/toolbar_edit_checklist" />

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      android:focusable="true"
      app:layout_constraintBottom_toTopOf="@id/complete_button"
      app:layout_constraintTop_toBottomOf="@id/toolbar_edit_checklist">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/repair_type_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/repair_type_text"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="변경 유형" />

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/purchase_button"
          repairType="@{vm.repairType == 1}"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_marginEnd="6dp"
          android:background="@drawable/bg_ar_asset_rounded_inactive"
          android:gravity="center"
          android:onClick="@{() -> vm.changeRepairType(1)}"
          android:paddingVertical="10dp"
          android:stateListAnimator="@null"
          android:text="@string/purchase"
          android:textSize="14sp"
          app:layout_constraintEnd_toStartOf="@id/repair_button"
          app:layout_constraintStart_toStartOf="@id/repair_type_title"
          app:layout_constraintTop_toBottomOf="@id/repair_type_title"
          tools:text="구매" />

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/repair_button"
          repairType="@{vm.repairType == 2}"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="6dp"
          android:layout_marginEnd="@dimen/app_horizontal_padding"
          android:background="@drawable/bg_ar_asset_rounded_inactive"
          android:gravity="center"
          android:onClick="@{() -> vm.changeRepairType(2)}"
          android:paddingVertical="10dp"
          android:stateListAnimator="@null"
          android:text="@string/repair"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/purchase_button"
          app:layout_constraintTop_toTopOf="@id/purchase_button"
          tools:text="수리" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/asset_photo_type_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/asset_photo_text"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/purchase_button"
          tools:text="제품 사진" />

        <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/add_asset_photo_button"
          checkListImageUrl="@{vm.checklistImageUrl}"
          android:layout_width="match_parent"
          android:layout_height="116dp"
          android:layout_marginHorizontal="@dimen/app_horizontal_padding"
          android:layout_marginTop="6dp"
          android:background="@drawable/register_add_picture_rounded"
          android:clipToOutline="true"
          android:stateListAnimator="@null"
          app:layout_constraintTop_toBottomOf="@id/asset_photo_type_title" />

        <ImageView
          android:layout_width="32dp"
          android:layout_height="32dp"
          isGone='@{vm.checklistImageUrl != ""}'
          android:src="@drawable/ic_add_picture"
          app:layout_constraintBottom_toBottomOf="@id/add_asset_photo_button"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@id/add_asset_photo_button" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/asset_manufacturer_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/asset_manufacturer_text"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/add_asset_photo_button" />

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/manufacturer_edit_text"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:background="@drawable/bg_search_bar_selector"
          android:inputType="text"
          android:paddingHorizontal="15dp"
          android:paddingVertical="13dp"
          android:text="@{vm.assetInit.manufacturer}"
          android:textColor="@color/detail_info_content"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="@id/add_asset_photo_button"
          app:layout_constraintStart_toStartOf="@id/asset_manufacturer_title"
          app:layout_constraintTop_toBottomOf="@id/asset_manufacturer_title"
          tools:text="LG" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/asset_product_name_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/asset_product_name_text"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/manufacturer_edit_text" />

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/product_name_edit_text"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:background="@drawable/bg_search_bar_selector"
          android:inputType="text"
          android:paddingHorizontal="15dp"
          android:paddingVertical="13dp"
          android:text="@{vm.assetInit.productName}"
          android:textColor="@color/detail_info_content"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="@id/manufacturer_edit_text"
          app:layout_constraintStart_toStartOf="@id/asset_product_name_title"
          app:layout_constraintTop_toBottomOf="@id/asset_product_name_title"
          tools:text="LG" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/flaw_part_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/flaw_part"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/product_name_edit_text" />

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/flaw_part_edit_text"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:background="@drawable/bg_search_bar_selector"
          android:hint="@string/flaw_part_hint"
          android:inputType="text"
          android:paddingHorizontal="15dp"
          android:paddingVertical="13dp"
          android:textColor="@color/detail_info_content"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="@id/product_name_edit_text"
          app:layout_constraintStart_toStartOf="@id/flaw_part_title"
          app:layout_constraintTop_toBottomOf="@id/flaw_part_title" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/description_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:fontFamily="@font/notosanskr_medium"
          android:includeFontPadding="false"
          android:text="@string/checklist_description"
          android:textColor="@color/black"
          android:textSize="13sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/flaw_part_edit_text" />

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/description_edit_text"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_marginBottom="40dp"
          android:background="@drawable/bg_search_bar_selector"
          android:hint="@string/description_hint"
          android:inputType="text"
          android:paddingHorizontal="15dp"
          android:paddingVertical="13dp"
          android:textColor="@color/detail_info_content"
          android:textSize="14sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="@id/flaw_part_edit_text"
          app:layout_constraintStart_toStartOf="@id/description_title"
          app:layout_constraintTop_toBottomOf="@id/description_title" />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/complete_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/purple_700"
      android:gravity="center"
      android:paddingVertical="16dp"
      android:text="저장"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>