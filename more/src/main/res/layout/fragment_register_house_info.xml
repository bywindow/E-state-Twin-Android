<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="vm"
      type="com.idiot.more.ui.RegisterInfoViewModel" />
  </data>

  <FrameLayout
    android:id="@+id/house_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:behavior_draggable="false"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/house_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation_rounded"
        android:elevation="2dp"
        android:paddingHorizontal="@dimen/app_horizontal_padding"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:includeFontPadding="false"
          android:text="건물정보 입력"
          android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
          android:textSize="17sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/close_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:drawableEnd="@drawable/ic_btn_gnb_x"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@id/house_info_title">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:clipToPadding="false"
          android:orientation="vertical"
          android:paddingTop="10dp"
          android:paddingBottom="75dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/app_horizontal_padding">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="건물유형"
              android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

            <Spinner
              android:id="@+id/building_type_selector"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:background="@drawable/spinner_background" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:includeFontPadding="false"
              android:text="건물이름"
              android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

            <EditText
              android:id="@+id/building_name_input"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:background="@drawable/register_dialog_button_rounded"
              android:hint="@string/building_name_input_hint"
              android:includeFontPadding="false"
              android:inputType="text"
              android:paddingHorizontal="15dp"
              android:paddingVertical="13dp"
              android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/total_floor_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="건물의 층 수"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <EditText
                  android:id="@+id/building_total_floor_input"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:hint="-"
                  android:includeFontPadding="false"
                  android:inputType="numberDecimal"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintTop_toBottomOf="@id/total_floor_title" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="14dp"
                  android:includeFontPadding="false"
                  android:text="층"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                  app:layout_constraintBottom_toBottomOf="@id/building_total_floor_input"
                  app:layout_constraintEnd_toEndOf="@id/building_total_floor_input"
                  app:layout_constraintTop_toTopOf="@id/building_total_floor_input" />

              </androidx.constraintlayout.widget.ConstraintLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/current_floor_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="현재 층 수"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <EditText
                  android:id="@+id/building_current_floor_input"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:hint="-"
                  android:includeFontPadding="false"
                  android:inputType="numberDecimal"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintTop_toBottomOf="@id/current_floor_title" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="14dp"
                  android:includeFontPadding="false"
                  android:text="층"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                  app:layout_constraintBottom_toBottomOf="@id/building_current_floor_input"
                  app:layout_constraintEnd_toEndOf="@id/building_current_floor_input"
                  app:layout_constraintTop_toTopOf="@id/building_current_floor_input" />
              </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/net_area_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="전용면적"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <EditText
                  android:id="@+id/net_area_input"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:hint="-"
                  android:includeFontPadding="false"
                  android:inputType="numberDecimal"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintTop_toBottomOf="@id/net_area_title" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="14dp"
                  android:includeFontPadding="false"
                  android:text="@string/square_meter"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                  app:layout_constraintBottom_toBottomOf="@id/net_area_input"
                  app:layout_constraintEnd_toEndOf="@id/net_area_input"
                  app:layout_constraintTop_toTopOf="@id/net_area_input" />

              </androidx.constraintlayout.widget.ConstraintLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/area_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="계약면적"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <EditText
                  android:id="@+id/area_input"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:hint="-"
                  android:includeFontPadding="false"
                  android:inputType="numberDecimal"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintTop_toBottomOf="@id/area_title" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="14dp"
                  android:includeFontPadding="false"
                  android:text="@string/square_meter"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                  app:layout_constraintBottom_toBottomOf="@id/area_input"
                  app:layout_constraintEnd_toEndOf="@id/area_input"
                  app:layout_constraintTop_toTopOf="@id/area_input" />
              </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:includeFontPadding="false"
              android:text="난방종류"
              android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

            <Spinner
              android:id="@+id/heat_type_selector"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:background="@drawable/spinner_background" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/elevator_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="엘리베이터"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/has_elevator_button"
                  selectedType="@{vm.hasElevator}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:layout_marginEnd="4dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:onClick="@{() -> vm.elevatorButtonClicked(true)}"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:stateListAnimator="@null"
                  android:text="있음"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintEnd_toStartOf="@id/has_not_elevator_button"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/elevator_title" />

                <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/has_not_elevator_button"
                  selectedType="@{vm.hasElevator}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="4dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:onClick="@{() -> vm.elevatorButtonClicked(false)}"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:stateListAnimator="@null"
                  android:text="없음"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@id/has_elevator_button"
                  app:layout_constraintTop_toTopOf="@id/has_elevator_button" />

              </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                  android:id="@+id/duplex_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:includeFontPadding="false"
                  android:text="복층 유무"
                  android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/has_duplex_button"
                  selectedType="@{vm.hasDuplex}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:layout_marginEnd="4dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:onClick="@{() -> vm.duplexButtonClicked(true)}"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:stateListAnimator="@null"
                  android:text="복층"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintEnd_toStartOf="@id/has_not_duplex_button"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/duplex_title" />

                <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/has_not_duplex_button"
                  selectedType="@{vm.hasDuplex}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="4dp"
                  android:background="@drawable/register_dialog_button_rounded"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:onClick="@{() -> vm.duplexButtonClicked(false)}"
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="13dp"
                  android:stateListAnimator="@null"
                  android:text="단층"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@id/has_duplex_button"
                  app:layout_constraintTop_toTopOf="@id/has_duplex_button" />
              </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:includeFontPadding="false"
              android:text="방 구조"
              android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

            <Spinner
              android:id="@+id/room_type_selector"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:background="@drawable/spinner_background" />

            <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1">

              <TextView
                android:id="@+id/veranda_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:text="베란다/발코니"
                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

              <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/has_veranda_button"
                selectedType="@{vm.hasVeranda}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/register_dialog_button_rounded"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="@{() -> vm.verandaButtonClicked(true)}"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:stateListAnimator="@null"
                android:text="있음"
                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                app:layout_constraintEnd_toStartOf="@id/has_not_veranda_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/veranda_title" />

              <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/has_not_veranda_button"
                selectedType="@{vm.hasVeranda}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/register_dialog_button_rounded"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="@{() -> vm.verandaButtonClicked(false)}"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:stateListAnimator="@null"
                android:text="없음"
                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/has_veranda_button"
                app:layout_constraintTop_toTopOf="@id/has_veranda_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1">

              <TextView
                android:id="@+id/short_term_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:text="단기임대 가능여부"
                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

              <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/short_able_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/register_dialog_button_rounded"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:stateListAnimator="@null"
                android:text="가능"
                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                app:layout_constraintEnd_toStartOf="@id/short_disable_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/short_term_title" />

              <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/short_disable_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/register_dialog_button_rounded"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:stateListAnimator="@null"
                android:text="불가능"
                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/short_able_button"
                app:layout_constraintTop_toTopOf="@id/short_able_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1">

              <TextView
                android:id="@+id/available_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:text="입주 가능일"
                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

              <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/register_dialog_button_rounded"
                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:stateListAnimator="@null"
                android:text="입주가능일을 선택해주세요."
                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                app:layout_constraintTop_toBottomOf="@id/available_date_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
          </LinearLayout>

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complete_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </LinearLayout>
      </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </FrameLayout>
</layout>