<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TextAppearance.idiot.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">17sp</item>
    <item name="android:fontFamily">@font/pretendard_regular</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.idiot.rounded.button.text" parent="TextAppearance.AppCompat.Widget.Button">
    <item name="android:fontFamily">@font/pretendard_regular</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/register_info_edit_text_hint</item>
  </style>

  <style name="Theme.idiot.BottomSheet.Rounded" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
  </style>

  <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@android:color/transparent</item>
  </style>
</resources>