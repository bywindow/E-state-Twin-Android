<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="viewmodel"
      type="com.idiot.feature.login.ui.main.LoginViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <ImageView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/estate_logo_horizontal_padding"
      android:src="@drawable/estate_splash_logo"
      app:layout_constraintBottom_toTopOf="@id/sns_icon_layout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/sns_icon_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/login_horizontal_padding"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toTopOf="@id/sign_in_button_layout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.7">

      <com.google.android.gms.common.SignInButton
        android:id="@+id/google_button"
        android:layout_width="@dimen/login_button_size"
        android:layout_height="@dimen/login_button_size"
        android:layout_margin="@dimen/login_button_margin"
        android:visibility="gone" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/google_active_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_size"
        android:layout_margin="@dimen/login_button_margin"
        android:background="@drawable/google_login_button_background"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="@dimen/login_icon_margin_start"
        android:visibility="gone">

        <ImageView
          android:id="@+id/google_icon"
          android:layout_width="@dimen/login_icon_size"
          android:layout_height="@dimen/login_icon_size"
          android:src="@drawable/ic_login_google"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/google_text_view"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/login_text_margin_start"
          android:includeFontPadding="false"
          android:text="@string/sign_google"
          android:textAppearance="@style/TextAppearance.Signin.Medium"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@id/google_icon"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kakao_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_size"
        android:layout_margin="@dimen/login_button_margin"
        android:background="@drawable/kakao_login_button_background"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="@dimen/login_icon_margin_start">

        <ImageView
          android:id="@+id/kakao_icon"
          android:layout_width="@dimen/login_icon_size"
          android:layout_height="@dimen/login_icon_size"
          android:src="@drawable/ic_login_kakao"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/kakao_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:includeFontPadding="false"
          android:text="@string/sign_kakao"
          android:textAppearance="@style/TextAppearance.Signin.Medium"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/naver_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_size"
        android:layout_margin="@dimen/login_button_margin"
        android:background="@drawable/naver_login_button_background"
        android:paddingHorizontal="@dimen/login_icon_margin_start"
        android:visibility="gone">

        <ImageView
          android:id="@+id/naver_icon"
          android:layout_width="@dimen/login_icon_size"
          android:layout_height="@dimen/login_icon_size"
          android:src="@drawable/ic_login_naver"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/naver_text_view"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/login_text_margin_start"
          android:includeFontPadding="false"
          android:text="@string/sign_naver"
          android:textAppearance="@style/TextAppearance.Signin.Medium"
          android:textColor="#ffffff"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@id/naver_icon"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/sign_in_button_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/login_horizontal_padding"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent">

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>