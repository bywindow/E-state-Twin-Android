<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.EstateListFragment">

  <data>
    <variable
      name="title"
      type="String" />
    <variable
      name="adapter"
      type="com.idiot.home.ui.EstateListAdapter" />
    <variable
      name="vm"
      type="com.idiot.home.ui.EstateListViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_layout"
      android:id="@+id/toolbar_estate_list"
      app:title="@{title}"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/estate_list_view"
      estateAdapter="@{adapter}"
      estateList="@{vm.estateList}"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintTop_toBottomOf="@id/toolbar_estate_list"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:listitem="@layout/list_item_estate"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>