<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="vm"
      type="com.idiot.home.ui.HouseDetailViewModel" />

    <variable
      name="optionAdapter"
      type="com.idiot.home.ui.HouseOptionListAdapter" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/gray_100"
      tools:context="com.idiot.home.ui.HouseDetailFragment">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="92dp">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/glideSlideViewPager"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/gray_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_btn_gnb_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/shareButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_btn_gnb_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:gravity="center"
          android:paddingVertical="18dp"
          app:divider="@drawable/divider_detail_feat_buttons"
          app:dividerPadding="10dp"
          app:showDividers="middle">

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/videoPlayButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/detail_feat_button_width"
            android:layout_height="@dimen/detail_feat_button_height"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_detail_house_video"
            android:text="매물영상"
            android:textSize="10sp" />

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/threeDimenButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/detail_feat_button_width"
            android:layout_height="@dimen/detail_feat_button_height"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_detail_three_dimen"
            android:text="@string/viewer_3d_button_text"
            android:textSize="10sp" />

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ARPlayButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/detail_feat_button_width"
            android:layout_height="@dimen/detail_feat_button_height"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_detail_ar_video"
            android:text="AR 영상"
            android:textSize="10sp" />

          <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ARCameraButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/detail_feat_button_width"
            android:layout_height="@dimen/detail_feat_button_height"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_detail_ar_camera"
            android:text="AR 카메라"
            android:textSize="10sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/basic_info_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp">

          <TextView
            android:id="@+id/basic_trans_type_info_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.transType}"
            android:textAppearance="@style/TextAppearance.idiot.title.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <TextView
            android:id="@+id/basic_price_info_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{vm.estatePrice}"
            android:textAppearance="@style/TextAppearance.idiot.title.Text"
            app:layout_constraintStart_toEndOf="@id/basic_trans_type_info_textView"
            app:layout_constraintTop_toTopOf="@id/basic_trans_type_info_textView" />

          <TextView
            android:id="@+id/basic_info_register_date_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='@{vm.postedData + "일전"}'
            android:textAppearance="@style/TextAppearance.idiot.sub.Text"
            app:layout_constraintBottom_toBottomOf="@+id/basic_price_info_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/basic_price_info_textView" />

          <TextView
            android:id="@+id/basic_house_name_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{vm.detailEstate.address.buildingName}"
            android:textAppearance="@style/TextAppearance.idiot.sub.Text"
            app:layout_constraintStart_toStartOf="@+id/basic_trans_type_info_textView"
            app:layout_constraintTop_toBottomOf="@+id/basic_price_info_textView" />

          <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="@dimen/detail_info_card_corner"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/basic_house_name_textView">

            <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingVertical="20dp">

              <ImageView
                android:id="@+id/basic_room_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_room"
                app:layout_constraintEnd_toStartOf="@id/basic_floor_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

              <TextView
                android:id="@+id/basic_room_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@{vm.estateType}"
                android:textAppearance="@style/TextAppearance.idiot.icon.Text"
                app:layout_constraintEnd_toEndOf="@id/basic_room_image"
                app:layout_constraintStart_toStartOf="@id/basic_room_image"
                app:layout_constraintTop_toBottomOf="@id/basic_room_image" />

              <ImageView
                android:id="@+id/basic_floor_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_floor"
                app:layout_constraintEnd_toStartOf="@id/basic_size_image"
                app:layout_constraintStart_toEndOf="@id/basic_room_image"
                app:layout_constraintTop_toTopOf="parent" />

              <TextView
                android:id="@+id/basic_floor_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text='@{vm.detailEstate.house.currentFloors + " 층"}'
                android:textAppearance="@style/TextAppearance.idiot.icon.Text"
                app:layout_constraintEnd_toEndOf="@id/basic_floor_image"
                app:layout_constraintStart_toStartOf="@id/basic_floor_image"
                app:layout_constraintTop_toBottomOf="@id/basic_floor_image" />

              <ImageView
                android:id="@+id/basic_size_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_m_2"
                app:layout_constraintEnd_toStartOf="@id/basic_cost_image"
                app:layout_constraintStart_toEndOf="@id/basic_floor_image"
                app:layout_constraintTop_toTopOf="parent" />

              <TextView
                android:id="@+id/basic_size_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:text='@{vm.detailEstate.house.rentableArea + ""}'
                android:textAppearance="@style/TextAppearance.idiot.icon.Text"
                app:layout_constraintEnd_toStartOf="@id/size_unit_text"
                app:layout_constraintStart_toStartOf="@id/basic_size_image"
                app:layout_constraintTop_toBottomOf="@id/basic_size_image" />

              <TextView
                android:id="@+id/size_unit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:gravity="start"
                android:text="@string/square_meter"
                android:textAppearance="@style/TextAppearance.idiot.icon.Text"
                app:layout_constraintEnd_toEndOf="@id/basic_size_image"
                app:layout_constraintStart_toEndOf="@id/basic_size_textView"
                app:layout_constraintTop_toTopOf="@id/basic_size_textView" />

              <ImageView
                android:id="@+id/basic_cost_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_cost"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/basic_size_image"
                app:layout_constraintTop_toTopOf="parent" />

              <TextView
                android:id="@+id/basic_cost_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text='@{vm.detailEstate.house.maintenanceFee + "만원"}'
                android:textAppearance="@style/TextAppearance.idiot.icon.Text"
                app:layout_constraintEnd_toEndOf="@id/basic_cost_image"
                app:layout_constraintStart_toStartOf="@id/basic_cost_image"
                app:layout_constraintTop_toBottomOf="@id/basic_cost_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>
          </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="@dimen/app_horizontal_padding"
          android:layout_marginTop="45dp">

          <TextView
            android:id="@+id/option_info_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="옵션 정보"
            android:textAppearance="@style/TextAppearance.idiot.title.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="@dimen/detail_info_card_corner"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/option_info_textView">

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/detail_option_list"
              adapter="@{optionAdapter}"
              submitList="@{vm.assetList}"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clipToPadding="false"
              android:overScrollMode="never"
              android:paddingBottom="20dp"
              app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
              app:spanCount="5"
              tools:listitem="@layout/list_item_detail_option" />
          </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/app_horizontal_padding"
          android:layout_marginTop="40dp">

          <TextView
            android:id="@+id/price_info_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="가격 정보"
            android:textAppearance="@style/TextAppearance.idiot.title.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            app:cardCornerRadius="@dimen/detail_info_card_corner"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/price_info_textView">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:divider="@drawable/divider_detail_content"
              app:dividerPadding="10dp"
              app:showDividers="middle">

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/deposit_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="전/월세 가격"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/deposit_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="2000만원 / 20만원"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/maintenance_fee_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="관리비"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/maintenance_fee_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="매월 7만원"
                    android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />

                  <TextView
                    android:id="@+id/maintenance_fee_sub_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(청소비, 경비비, 승강기유지비, 수선유지비, 인터넷)"
                    android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                    android:textColor="#9094a8"
                    android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/parking_fee_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="주차여부"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/parking_fee_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="1대 / 주차비 5만원"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
          </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/app_horizontal_padding"
          android:layout_marginTop="40dp">

          <TextView
            android:id="@+id/detail_info_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            android:textAppearance="@style/TextAppearance.idiot.title.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            app:cardCornerRadius="@dimen/detail_info_card_corner"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_info_textView">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:divider="@drawable/divider_detail_content"
              app:dividerPadding="10dp"
              app:showDividers="middle">

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/home_type_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="건물 유형"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/home_type_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="오피스텔"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/home_name_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="건물이름"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />


                <TextView
                  android:id="@+id/home_name_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="아크로리버파크"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/home_register_date_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="매물등록 날짜"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/home_register_date_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="2022.05.12"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/floor_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="층수 및 현재 층"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/floor_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="12층 / 15층"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/area_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="면적"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/net_area_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/square_meter"
                    android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />

                  <TextView
                    android:id="@+id/area_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/square_meter"
                    android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
                </androidx.appcompat.widget.LinearLayoutCompat>
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
                  android:id="@+id/heat_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="난방종류"
                  android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text" />

                <TextView
                  android:id="@+id/heat_content_textView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight=".5"
                  android:text="개별난방"
                  android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingStart="15dp">

                <TextView
