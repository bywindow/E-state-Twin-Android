<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="com.idiot.model.EstateSearchResponse" />

    <variable
      name="town"
      type="String" />

    <variable
      name="clickListener"
      type="android.view.View.OnClickListener" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:clickable="true"
    android:focusable="true"
    android:onClick="@{clickListener}">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/image_view"
      loadImageUrl="@{model.estateThumbNail}"
      android:scaleType="fitXY"
      android:layout_width="115dp"
      android:layout_height="0dp"
      android:layout_marginVertical="10dp"
      android:layout_marginStart="10dp"
      android:background="@drawable/bg_estate_list_image"
      android:clipToOutline="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/title"
      transactionType="@{model.transactionType}"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="14dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/image_view"
      app:layout_constraintTop_toTopOf="@id/image_view"
      tools:text="전세" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/estate_type_text"
      estateType="@{model.estateType}"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@id/borough_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/title"
      app:layout_constraintTop_toBottomOf="@id/title"
      tools:text="아파트" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/borough_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:text="@{town}"
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toTopOf="@id/floor_text"
      app:layout_constraintStart_toStartOf="@id/estate_type_text"
      app:layout_constraintTop_toBottomOf="@id/estate_type_text"
      tools:text="반포동" />

    <View
      android:id="@+id/decor"
      android:layout_width="2dp"
      android:layout_height="2dp"
      android:layout_marginStart="5dp"
      android:background="@color/black"
      app:layout_constraintBottom_toBottomOf="@id/borough_text"
      app:layout_constraintStart_toEndOf="@id/borough_text"
      app:layout_constraintTop_toTopOf="@id/borough_text" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/building_name_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:text="@{model.buildingName}"
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/borough_text"
      app:layout_constraintStart_toEndOf="@id/decor"
      app:layout_constraintTop_toTopOf="@id/borough_text"
      tools:text="아크로리버파크" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/floor_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:text='@{model.currentFloors + "층"}'
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/image_view"
      app:layout_constraintStart_toStartOf="@id/borough_text"
      app:layout_constraintTop_toBottomOf="@id/borough_text"
      tools:text="5층" />

    <View
      android:id="@+id/decor_floor"
      android:layout_width="2dp"
      android:layout_height="2dp"
      android:layout_marginStart="5dp"
      android:background="@color/black"
      app:layout_constraintBottom_toBottomOf="@id/floor_text"
      app:layout_constraintStart_toEndOf="@id/floor_text"
      app:layout_constraintTop_toTopOf="@id/floor_text" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/size_text"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_marginStart="5dp"
      android:text='@{model.rentableArea + ""}'
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/floor_text"
      app:layout_constraintStart_toEndOf="@id/decor_floor"
      app:layout_constraintTop_toTopOf="@id/floor_text"
      tools:text="245" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/meter_unit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="2dp"
      android:text="@string/square_meter"
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@id/size_text"
      app:layout_constraintStart_toEndOf="@id/size_text" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>