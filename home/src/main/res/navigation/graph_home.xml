<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/graph_home"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.idiot.home.ui.HomeFragment"
    android:label="HomeFragment" >
    <action
      android:id="@+id/action_homeFragment_to_houseDetailFragment"
      app:destination="@id/houseDetailFragment" />
    <action
      android:id="@+id/action_homeFragment_to_estateListFragment"
      app:destination="@id/estateListFragment" />
  </fragment>
  <fragment
    android:id="@+id/houseDetailFragment"
    android:name="com.idiot.home.ui.HouseDetailFragment"
    android:label="HouseDetailFragment">
    <argument
      android:name="houseId"
      app:argType="long"/>
    <action
      android:id="@+id/action_houseDetailFragment_to_floorPlanFragment"
      app:destination="@id/floorPlanFragment" />
  </fragment>
  <fragment
    android:id="@+id/floorPlanFragment"
    android:name="com.idiot.home.ui.FloorPlanFragment"
    android:label="fragment_floor_plan"
    tools:layout="@layout/fragment_floor_plan">
    <argument
      android:name="model"
      app:argType="string"/>
  </fragment>
  <fragment
    android:id="@+id/estateListFragment"
    android:name="com.idiot.home.ui.EstateListFragment"
    android:label="fragment_estate_list"
    tools:layout="@layout/fragment_estate_list">
    <argument
      android:name="borough"
      app:argType="string" />
  </fragment>
</navigation>