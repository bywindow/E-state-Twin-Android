<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/graph_home"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.idiot.home.ui.HomeFragment"
    android:label="HomeFragment" >
    <action
      android:id="@+id/action_homeFragment_to_houseDetailFragment"
      app:destination="@id/houseDetailFragment" />
  </fragment>
  <fragment
    android:id="@+id/houseDetailFragment"
    android:name="com.idiot.home.ui.HouseDetailFragment"
    android:label="HouseDetailFragment">
    <argument
      android:name="houseId"
      app:argType="long"/>
  </fragment>
</navigation>