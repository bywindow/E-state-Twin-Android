<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar_register_info"
            layout="@layout/toolbar_layout"
            app:title="@{`매물정보 입력`}" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?android:attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp">

                <include
                    android:id="@+id/picture_title"
                    layout="@layout/tv_register_title"
                    app:inputTitle="@{`사진`}" />

                <TextView
                    android:id="@+id/picture_count_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/app_horizontal_padding"
                    android:includeFontPadding="false"
                    android:text="2/20"
                    android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/picture_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/picture_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/estate_picture_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/picture_title"
                    tools:listitem="@layout/list_item_register_info_picture_header" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>