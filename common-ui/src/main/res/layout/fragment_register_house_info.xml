<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/house_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:behavior_draggable="false"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/house_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_navigation_rounded"
                android:elevation="2dp"
                android:paddingHorizontal="@dimen/app_horizontal_padding"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="건물정보 입력"
                    android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_btn_gnb_x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/house_info_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="?attr/actionBarSize"
                    android:paddingHorizontal="@dimen/app_horizontal_padding"
                    app:layout_constraintTop_toBottomOf="@id/house_info_title">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="건물유형"
                        android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

                    <Spinner
                        android:id="@+id/building_type_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/spinner_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:includeFontPadding="false"
                        android:text="건물이름"
                        android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

                    <EditText
                        android:id="@+id/building_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/register_dialog_button_rounded"
                        android:hint="@string/building_name_input_hint"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="13dp"
                        android:textAppearance="@style/TextAppearance.idiot.info.content.Text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/total_floor_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:includeFontPadding="false"
                                android:text="건물의 층 수"
                                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/building_total_floor_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/register_dialog_button_rounded"
                                android:gravity="center"
                                android:hint="-"
                                android:includeFontPadding="false"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="13dp"
                                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                                app:layout_constraintTop_toBottomOf="@id/total_floor_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="14dp"
                                android:includeFontPadding="false"
                                android:text="층"
                                android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                                app:layout_constraintBottom_toBottomOf="@id/building_total_floor_input"
                                app:layout_constraintEnd_toEndOf="@id/building_total_floor_input"
                                app:layout_constraintTop_toTopOf="@id/building_total_floor_input" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/current_floor_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:includeFontPadding="false"
                                android:text="현재 층 수"
                                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/building_current_floor_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/register_dialog_button_rounded"
                                android:gravity="center"
                                android:hint="-"
                                android:includeFontPadding="false"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="13dp"
                                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                                app:layout_constraintTop_toBottomOf="@id/current_floor_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="14dp"
                                android:includeFontPadding="false"
                                android:text="층"
                                android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                                app:layout_constraintBottom_toBottomOf="@id/building_current_floor_input"
                                app:layout_constraintEnd_toEndOf="@id/building_current_floor_input"
                                app:layout_constraintTop_toTopOf="@id/building_current_floor_input" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/net_area_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:includeFontPadding="false"
                                android:text="전용면적"
                                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/net_area_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/register_dialog_button_rounded"
                                android:gravity="center"
                                android:hint="-"
                                android:includeFontPadding="false"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="13dp"
                                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                                app:layout_constraintTop_toBottomOf="@id/net_area_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="14dp"
                                android:includeFontPadding="false"
                                android:text="@string/square_meter"
                                android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                                app:layout_constraintBottom_toBottomOf="@id/net_area_input"
                                app:layout_constraintEnd_toEndOf="@id/net_area_input"
                                app:layout_constraintTop_toTopOf="@id/net_area_input" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/area_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:includeFontPadding="false"
                                android:text="계약면적"
                                android:textAppearance="@style/TextAppearance.idiot.tab.title.Text"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/area_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/register_dialog_button_rounded"
                                android:gravity="center"
                                android:hint="-"
                                android:includeFontPadding="false"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="13dp"
                                android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
                                app:layout_constraintTop_toBottomOf="@id/area_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="14dp"
                                android:includeFontPadding="false"
                                android:text="@string/square_meter"
                                android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                                app:layout_constraintBottom_toBottomOf="@id/area_input"
                                app:layout_constraintEnd_toEndOf="@id/area_input"
                                app:layout_constraintTop_toTopOf="@id/area_input" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:includeFontPadding="false"
                        android:text="난방종류"
                        android:textAppearance="@style/TextAppearance.idiot.tab.title.Text" />

                    <Spinner
                        android:id="@+id/heat_type_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>