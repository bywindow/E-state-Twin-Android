<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/register_house_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_bottom_margin"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="@dimen/my_house_info_banner_corner"
        app:cardElevation="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                android:paddingStart="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/house_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="house name"
                    android:textAppearance="@style/TextAppearance.idiot.title.Text"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/house_addr_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"
                    android:text="house address"
                    android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/house_owner_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:text="임대인 : whowhowho"
                    android:textAppearance="@style/TextAppearance.idiot.sub.Text" />

                <TextView
                    android:id="@+id/house_owner_phone_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:text="연락처 : 000-1234-5678"
                    android:textAppearance="@style/TextAppearance.idiot.sub.Text" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>