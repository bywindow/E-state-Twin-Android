<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EStateTwin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
<!--        휴대폰 상단 상태바 색깔-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBarOverlay">true</item>
<!--        textAppearance-->
        <item name="android:textViewStyle">@style/PretendardTextView</item>
        <item name="android:buttonStyle">@style/PretendardButton</item>
    </style>

    <!--메인 앱바 브랜드 도움말 스타일-->
    <style name="TextAppearance.idiot.Appbar.Text" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">22sp</item>
    </style>
<!--    default text family-->
    <style name="PretendardTextView" parent="android:Widget.TextView">
        <item name="fontFamily">@font/pretendard</item>
    </style>
    <style name="PretendardButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/pretendard</item>
    </style>
<!--    house detail page font style-->
    <style name="TextAppearance.idiot.title.Text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard</item>
    </style>
    <style name="TextAppearance.idiot.sub.Text" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>