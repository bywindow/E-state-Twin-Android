<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_houseDetailFragment"
            app:destination="@id/houseDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/interestFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.InterestFragment"
        android:label="fragment_interest"
        tools:layout="@layout/fragment_interest" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/myHouseFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.MyHouseFragment"
        android:label="fragment_my_house"
        tools:layout="@layout/fragment_my_house" />

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_moreFragment_to_registerForBrokerFragment"
            app:destination="@id/registerForBrokerFragment" />
    </fragment>
    <fragment
        android:id="@+id/houseDetailFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.HouseDetailFragment"
        android:label="HouseDetailFragment">
        <argument
            android:name="houseId"
            app:argType="long"/>
    </fragment>
    <fragment
        android:id="@+id/registerForBrokerFragment"
        android:name="com.idiot.e_state_twin_android.core.ui.RegisterForBrokerFragment"
        android:label="fragment_register_for_broker"
        tools:layout="@layout/fragment_register_for_broker" />

</navigation>