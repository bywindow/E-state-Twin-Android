<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    android:fillViewport="true"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="?attr/actionBarSize"
      android:fitsSystemWindows="true"
      android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/help_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/help_banner_card"
          android:layout_width="match_parent"
          android:layout_height="96dp"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="28dp"
          android:layout_marginEnd="@dimen/app_horizontal_padding"
          android:layout_marginBottom="16dp"
          app:cardBackgroundColor="@color/purple_200"
          app:cardCornerRadius="@dimen/tenant_mode_help_banner_corner"
          app:cardElevation="0dp"
          app:layout_constraintTop_toTopOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
              android:id="@+id/tenant_mode_help_textView"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginVertical="28dp"
              android:layout_marginStart="19dp"
              android:includeFontPadding="false"
              android:text="@string/tenant_mode_help"
              android:textAppearance="@style/TextAppearance.idiot.tab.Text"
              android:textColor="@color/help_text"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
          android:layout_width="100dp"
          android:layout_height="112dp"
          android:src="@drawable/chat_img"
          app:layout_constraintBottom_toBottomOf="@id/help_banner_card"
          app:layout_constraintEnd_toEndOf="@id/help_banner_card"
          app:layout_constraintTop_toTopOf="@id/help_banner_card" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_100"
        android:paddingBottom="20dp">

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/my_house_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="24dp"
          android:layout_marginEnd="@dimen/app_horizontal_padding"
          app:cardCornerRadius="@dimen/my_house_info_banner_corner"
          app:cardElevation="0dp"
          app:layout_constraintTop_toTopOf="parent">

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:paddingStart="15dp">

            <TextView
              android:id="@+id/my_house_type_textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="아파트"
              android:textAppearance="@style/TextAppearance.idiot.info.content.Text"
              android:textSize="12sp" />

            <TextView
              android:id="@+id/my_house_name_textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:includeFontPadding="false"
              android:text="아크로리버파크"
              android:textAppearance="@style/TextAppearance.idiot.myhouse.title.Text" />

            <TextView
              android:id="@+id/my_house_addr_textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:includeFontPadding="false"
              android:text="서울특별시 서초구 신반포로15길 19 101동 1207호"
              android:textAppearance="@style/TextAppearance.idiot.sub.Text" />

          </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <TextView
          android:id="@+id/asset_manage_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="30dp"
          android:text="에셋 관리"
          android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/my_house_card" />

        <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/asset_manage_tab_list_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          app:divider="@drawable/divider_more_tab"
          app:dividerPadding="10dp"
          app:layout_constraintTop_toBottomOf="@id/asset_manage_title"
          app:showDividers="middle" />

        <TextView
          android:id="@+id/contract_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/app_horizontal_padding"
          android:layout_marginTop="30dp"
          android:text="계약"
          android:textAppearance="@style/TextAppearance.idiot.info.subTitle.Text"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/asset_manage_tab_list_layout" />

        <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/contract_tab_list_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:orientation="vertical"
          app:divider="@drawable/divider_more_tab"
          app:dividerPadding="10dp"
          app:layout_constraintTop_toBottomOf="@id/contract_title"
          app:showDividers="middle" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</layout>